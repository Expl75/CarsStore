@model LoginModel
@{ 
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" asp-href-include="lib/bootstrap/dist/css/*.min.css" />
</head>
<body>
    <div class="panel-body">
        <div class="bg-primary panel-body"><h3>Log In</h3></div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <form asp-action="Login" method="post">
            <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" /><br />
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RememberMe"></label>
                <input asp-for="RememberMe" class="checkbox" />
            </div>
            <button class="btn btn-primary" type="submit">Log In</button>
            <a class="btn btn-primary" asp-action="Register">Register</a>
            <a class="btn btn-danger" asp-action="Index" asp-controller="Home">Cancel</a>
        </form>
    </div>
</body>
</html>