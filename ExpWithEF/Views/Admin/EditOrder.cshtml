@model EditOrderModel

<div class="panel-body bg-primary"><h3>Edit Order</h3></div><br />
<div asp-validation-summary="All" class="text-danger"></div>
<form asp-action="EditOrder" method="post">
    <div class="form-group">
        <label asp-for="OrderId"></label>
        <input asp-for="OrderId" class="form-control" readonly />
        <span asp-validation-for="OrderId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="UserId"></label>
        <input asp-for="UserId" class="form-control" readonly/>
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="UserName"></label>
        <input asp-for="UserName" class="form-control" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Phone"></label>
        <input asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CarId">Car Id</label>
        <select class="form-control" asp-for="CarId">
            
            @foreach(Car car in Model.Cars)
            {
                <option value="@car.Id">Company: @car.company, Model: @car.model, Color: @car.color, Price: @car.price, Id: @car.Id</option>
            }
        </select>
        <span asp-validation-for="CarId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-danger">Cancel</a>
</form>